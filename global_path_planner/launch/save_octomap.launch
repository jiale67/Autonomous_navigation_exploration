<launch>
  <node pkg="octomap_server" type="octomap_server_node" name="octomap_server">
    <param name="frame_id" type="string" value="map" />
    <param name="resolution" value="0.1" />
    <param name="latch" value="false" />
    <param name="save_directory" value="$(env HOME)/maps" />
    <remap from="cloud_in" to="/explored_areas" />
    <!-- <remap from="octomap_point_cloud_centers" to="/octomap/maze" /> -->

    <param name="height_map" value="false" />
    <param name="colored_map" value="false" />
    <!-- <param name="filter_ground" value="true" /> -->
    <param name="filter_ground" value="false" />  <!-- 关闭地面过滤 -->
    <param name="ground_filter/distance" value="0.04" />
    <param name="ground_filter/angle" value="0.15" />
    <param name="ground_filter/plane_distance" value="0.07" />
  </node>
</launch>

